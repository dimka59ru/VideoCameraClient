<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="600"
             x:Class="App.Controls.VideoPanelConstructor">
    <Grid RowDefinitions="*, Auto">
        
        <Grid Grid.Row="0" 
              Name="MainGrid">
        
        </Grid>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Content="AddRow"
                    Click="ButtonAddRow_OnClick"/>
            <Button Content="DelRow"
                    Click="ButtonDelRow_OnClick"/>
            <Button Content="AddColumn"
                    Click="ButtonAddColumn_OnClick"/>
            <Button Content="RemoveColumn"
                    Click="ButtonRemoveColumn_OnClick"/>
        </StackPanel>
    </Grid>
    
</UserControl>
